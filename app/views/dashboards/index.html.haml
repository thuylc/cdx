.row
  .col.pe-6
    %form#filters-form{ action: dashboard_path, 'data-auto-submit' => true }
      .filter
        %label.block Date
        = cdx_select name: 'since', value: params['since'] do |select|
          - select.items options_for_date, :value, :label
  .col.pe-6
    %form#filters-form{ action: dashboard_path }
      .row
        .col.pe-2
          %label.block Date From
          = date_field('range','start_time[gte]')
        .col.pe-2
          %label.block Date To
          = date_field('range','start_time[lte]')
        .col.pe-2
          %label.block ''
          %input#query_button.btn-primary(type='submit' value='Query')
.row
  .col.pe-8
    %h1 Usage in the last 12 months
.row#tests_run
  .col.pe-7
    = react_component('BarChart', data: query_tests_chart.data, height: 300, y_label: 'Tests Run')
  .col
    = react_component('PieChart', data: tests_by_name, height: 250, label: 'Tests Run')

%hr

.row
  .col
    %h1 Error rate #{chart_heading}
.row
  .col.pe-7
    = react_component('BarChart', data: query_errors.data, height: 300, y_label: 'Tests With Errors', x_labels: query_errors.users)
  .col
    = react_component('PieChart', data: errors_by_code, height: 250, label: 'Errors')
%hr
.row
  .col.pe-8
    %h1 Devices #{chart_heading}
.row
  .col.pe-7
    = react_component('BarChart', data: devices_reporting_chart.data, height: 300, y_label: 'Errors By Device', x_labels: devices_reporting_chart.device_uuids)
  .col
    = react_component('PieChart', data: devices_grouped, height: 250, label: 'Devices')
%hr
.row
  .col.pe-8
    %h1 Models #{chart_heading}
.row
  .col.pe-7
    = react_component('BarChart', data: errors_by_model_chart.data, height: 300, y_label: 'Errors By Model')
  .col
    = react_component('PieChart', data: errors_by_model, height: 250, label: 'By Models')
%hr
.row
  .col
    %h1 Successful tests #{chart_heading}
.row
  .col.pe-7
    = react_component('BarChart', data: successful_tests_chart.data, height: 300, y_label: 'successful Tests')
  .col
    = react_component('PieChart', data: successful_tests, height: 250, label: 'By success')
%hr
.row
  .col
    %h1 Unsuccessful tests #{chart_heading}
.row
  .col.pe-7
    = react_component('BarChart', data: unsuccessful_tests_chart.data, height: 300, y_label: 'successful Tests')
  .col
    = react_component('PieChart', data: unsuccessful_tests, height: 250, label: 'By success')
